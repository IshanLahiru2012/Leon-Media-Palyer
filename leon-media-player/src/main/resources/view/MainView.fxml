<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<BorderPane fx:id="root" prefHeight="520.0" prefWidth="978.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep11.MainViewController">
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <MediaView fx:id="mediaView" fitHeight="200.0" fitWidth="200.0" />
            <VBox alignment="BOTTOM_CENTER" prefHeight="530.0" prefWidth="948.0" spacing="10.0">
               <children>
                  <Slider fx:id="sldProgress" onMouseDragged="#sldProgressOnMouseDragged" prefHeight="16.0" prefWidth="877.0">
                     <VBox.margin>
                        <Insets left="30.0" right="30.0" />
                     </VBox.margin>
                  </Slider>
                  <HBox prefHeight="73.0" prefWidth="825.0" spacing="10.0">
                     <children>
                        <Button fx:id="btnBrowse" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#btnBrowseOnAction" prefHeight="40.0" prefWidth="100.0" text="Browse" />
                        <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#btnPlayOnAction" prefHeight="40.0" prefWidth="100.0" text="Play" />
                        <Button fx:id="btnStop" layoutX="72.0" layoutY="10.0" mnemonicParsing="false" onAction="#btnStopOnAction" prefHeight="40.0" prefWidth="100.0" text="Stop" />
                        <Button fx:id="btnBackword" layoutX="134.0" layoutY="10.0" mnemonicParsing="false" onAction="#btnBackwordOnAction" prefHeight="40.0" prefWidth="100.0" text="&lt;&lt;" />
                        <Button fx:id="btnForward" layoutX="196.0" layoutY="10.0" mnemonicParsing="false" onAction="#btnForwardOnAction" prefHeight="40.0" prefWidth="100.0" text="&gt;&gt;" />
                        <Button fx:id="btnMinus" layoutX="258.0" layoutY="10.0" mnemonicParsing="false" onAction="#btnMinusOnAction" prefHeight="40.0" prefWidth="100.0" text="-10s" />
                        <Button fx:id="btnPlus" layoutX="320.0" layoutY="10.0" mnemonicParsing="false" onAction="#btnPlusOnAction" prefHeight="40.0" prefWidth="100.0" text="+10s" />
                        <VBox prefHeight="40.0" prefWidth="194.0">
                           <children>
                              <Label fx:id="lblTime" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="31.0" prefWidth="150.0" text="0.00/0.00" textFill="#fffdfd" />
                              <Slider fx:id="sldVolume" blockIncrement="0.1" max="1.0" onMouseClicked="#sldVolumeOnMouseClicked" onMouseDragged="#sldVolumeOnMouseDragged" prefHeight="40.0" prefWidth="203.0" value="1.0" />
                           </children>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets left="30.0" right="30.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>
